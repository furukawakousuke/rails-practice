<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block bg-light my-4 px-3">マイページ</h5><br>
      <span class="font-weight-bold mr-5">登録情報</span>
      <%= link_to "編集する",edit_customer_path(@customer),class:"btn btn-success btn-sm px-4 font-weight-bold" %>
      <table class=" table-bordered mt-3">
        <tr>
          <td class="p-2 bg-light" >氏名</td>
          <td class="p-2"><%= @customer.full_name %></td>
        </tr>
        <tr>
          <td class="p-2 bg-light">カナ</td>
          <td class="p-2"><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <td class="p-2 bg-light">郵便番号</td>
          <td class="p-2"><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td class="p-2 bg-light">住所</td>
          <td class="p-2 pr-5"><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="p-2 bg-light">電話番号</td>
          <td class="p-2"><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td class="p-2 bg-light pr-5">メールアドレス</td>
          <td class="p-2"><%= @customer.email %></td>
        </tr>
      </table>
      <table class="mt-3">
        <tr>
          <td class="font-weight-bold pr-3 mb-2">配送先</td>
          <td><%= link_to "一覧を見る",addresses_path,class:"btn btn-primary btn-sm px-4 font-weight-bold mb-2" %></td>
        </tr>
        <tr>
          <td class="font-weight-bold pr-3">注文履歴</td>
          <td><%= link_to "一覧を見る",orders_path,class:"btn btn-primary btn-sm px-4 font-weight-bold" %></td>
        </tr>
      </table>
  </div>
</div>