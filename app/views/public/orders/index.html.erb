<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block bg-light mt-3 px-3">注文履歴一覧</h5>
      <table class="table table-bordered">
        <thead class="bg-light">
          <tr>
            <td>注文日</td>
            <td>注文先</td>
            <td>注文商品</td>
            <td>支払い金額</td>
            <td>ステータス</td>
            <td>注文詳細</td>
          </tr>
        </thead>
        <% @orders.each do |order| %>
        <tbody>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              〒<%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            
            <td>
              <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %><br>
              <% end %>
            </td>
            <td>
              <%= order.total_payment %>
            </td>
            <td><%= order.status_i18n %></td>
            <td><%= link_to "表示する",order_path(order.id),class:"btn btn-primary btn-sm px-3" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>