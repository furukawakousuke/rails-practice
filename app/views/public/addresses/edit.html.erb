<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block bg-light my-4 px-3">配送先編集</h5>
      <%= form_with model: @address,url: address_path(@address),method: :patch do |f| %>
      <table>
        <tr>
          <td><%= f.label :postal_code,"郵便番号(ハイフンなし)" %></td>
          <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td><%= f.label :address,"住所" %></td>
          <td><%= f.text_field :address,:size=>"50" %></td>
        </tr>
        <tr>
          <td><%= f.label :name,"宛先" %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td></td><td></td>
          <td>
            <%= f.submit "変更内容を保存",class:"btn btn-success btn-sm px-3 font-weight-bold" %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>