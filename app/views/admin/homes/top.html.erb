<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block bg-light mt-3 px-3">注文履歴</h5>
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文回数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.reverse.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order) do %>
              <%= order.created_at.to_s(:datetime_jp) %>
              <% end %>
            </td>
            <td><%= order.name %></td>
            <td>
              <% order.order_details.each do |order_detail| %>
              <% @total += order_detail.amount %>
              <% end %>
              <%= @total %>
            </td>
            <td><%= order.status_i18n %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>