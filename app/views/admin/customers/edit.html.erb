<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block bg-light my-5 px-3"><%= @customer.full_name %>さんの会員情報編集</h5>
      <%= form_with model: @customer,url: admin_customer_path(@customer),method: :patch do |f| %>
      <table>
        <tr>
          <td class="pt-2 pr-5">会員ID</td>
          <td class="pt-2"><%= @customer.id %></td>
        </tr>
        <tr>
          <td class="pt-2 pr-5"><%= f.label :full_name,"氏名" %></td>
          <td class="pt-2">
            <%= f.text_field :first_name,class:"mr-4" %>
            <%= f.text_field :last_name %>
          </td>
        </tr>
        <tr>
          <td class="pt-2 pr-5"><%= f.label :full_name_kana,"フリガナ" %></td>
          <td class="pt-2">
            <%= f.text_field :first_name_kana,class:"mr-4" %>
            <%= f.text_field :last_name_kana %>
          </td>
        </tr>
        <tr>
          <td class="pt-2 pr-5"><%= f.label :postal_code,"郵便番号" %></td>
          <td class="pt-2"><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
          <td class="pt-2 pr-5"><%= f.label :address,"住所" %></td>
          <td colspan="3"  class="pt-2"><%= f.text_field :address,:size=>"48" %></td>
        </tr>
        <tr>
          <td class="pt-2 pr-5"><%= f.label :telephone_number,"電話番号" %></td>
          <td class="pt-2"><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <td class="pt-2 pr-5"><%= f.label :email,"メールアドレス" %></td>
          <td class="pt-2"><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td class="pt-2 pr-5"><%= f.label :is_deleted,"会員ステータス " %></td>
          <td class="pt-2">
            <%= f.radio_button :is_deleted,"valider" %>
            <%= f.label :is_deleted,"有効" %>
            <%= f.radio_button :is_deleted,"withdrawal" %>
            <%= f.label :is_deleted,"退会" %>
          </td>
        </tr>
        <td></td>
        <td class="pt-2"><%= f.submit "変更を保存",class:"btn btn-success px-4"%></td>
        <% end %>
      </table>
    </div>
  </div>
</div>