<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block bg-light my-3 px-3">会員一覧</h5>
      <table class="table" >
        <thead class="bg-light">
          <tr>
            <th>会員ID</th>
            <th >氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tbody>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer) do %>
              <%= customer.full_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_deleted == "valider" %>
              <span class="text-success font-weight-bold"><%= customer.is_deleted_i18n %></span>
              <% else %>
              <span class="text-secondary font-weight-bold"><%= customer.is_deleted_i18n %></span>
              <% end %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>