<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block bg-light my-5 px-3">ジャンル一覧・追加</h5>
      <%= form_with model:@genre,url: admin_genres_path,method: :post do |f| %>
      <%= f.label :name,"ジャンル名",class:"mr-4 font-weight-bold" %>
      <%= f.text_field :name,class:"mr-5" %>
      <%= f.submit "新規登録",class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-5">
      <table class="table ">
        <thead class="bg-light">
          <td class="pr-0 pl-5 font-weight-bold">ジャンル</td>
        <td colspan=""></td>
        </thead>
      <% @genres.each do |genre| %>
        <tbody>
          <td class="">
           <%= genre.name %> 
          </td>
          <td class="pl-0">
            <%= link_to "編集する",edit_admin_genre_path(genre) ,class:"btn btn-success" %>
          </td>
      <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>