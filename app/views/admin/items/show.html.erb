<div class="container">
  <div class="row">
    <div class="col-lg-2"><h5 class="d-inline-block bg-light my-5 px-3">商品詳細</h5><br></div>
    <div class="col-md-3 mt-5 pt-5 text-center">
      <%= image_tag @item.get_image,:size=>'200x200'  %>
    </div>
    <div class="col-lg-4 col-md-5 mt-5 pt-4 text-center">
      <table class="mt-2 table table-borderless">
        <tbody>
        <tr>
          <td class="pr-4">商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td>
          <td><%= @item.zeikomi.to_s(:delimited) %>
          (<%= @item.price.to_s(:delimited)  %>) 円</td>
        </tr>
        <tr >
          <td>販売ステータス</td>
          <td class="font-weight-bold mt-3">
            <% if @item.is_active_i18n == "販売中" %>
              <span class="text-success"><%= @item.is_active_i18n %></span>
              <% else %>
              <span class="text-primary"><%= @item.is_active_i18n %></span>
              <% end %>
          </td>
        </tr>
        </tbody>
      </table>
      <%= link_to "編集する",edit_admin_item_path,class:"btn btn-success px-3 " %>
    </div>
  </div>
</div>