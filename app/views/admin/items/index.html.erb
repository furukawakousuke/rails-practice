<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block bg-light mt-2 px-3">商品一覧</h5>
      <%= link_to new_admin_item_path,class:"d-block text-right " do %>
      <i class="fa-solid fa-circle-plus h4 text-dark"></i>
      <% end %>
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @items.each do |item| %>
        <tbody>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item),class:"javajava " do %>
              <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <td class="font-weight-bold">
              <% if item.is_active_i18n == "販売中" %>
              <span class="text-success"><%= item.is_active_i18n %></span>
              <% else %>
              <span class="text-primary"><%= item.is_active_i18n %></span>
              <% end %>
              </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <%= paginate @items %>
    </div>
  </div>
</div>