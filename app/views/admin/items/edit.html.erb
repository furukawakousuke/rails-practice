<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block bg-light my-5 px-3">商品一覧</h5>
      <%= form_with model: @item,url: admin_item_path(@item),method: :patch do |f| %>
      <table class="mx-auto">
        <thead><td></td><td colspan="1"></td></thead>
        <tbody>
          <tr>
            <td class="pb-3"><%= f.label :image,"商品画像" %></td>
            <td class="pb-3"><%= f.file_field :image,accept:"image/*" %></td>
          </tr>
          <tr>
            <td class="pb-3"><%= f.label :name,"商品名" %></td>
            <td class="pb-3"><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td class="pb-3"><%= f.label :introduction,"商品説明" %></td>
            <td class="pb-3"><%= f.text_area :introduction %></td>
          </tr>
          <tr>
            <td class="pb-3"><%= f.label :genre_id,"ジャンル" %></td>
            <td class="pb-3"><%= f.select :genre_id,options_from_collection_for_select(Genre.all,:id,:name),{include_blank: '選択してください'}%></td>
          </tr>
          <tr>
            <td class="pb-3"><%= f.label :is_active,"販売ステータス" %></td>
            <td class="pb-3">
              <%= f.radio_button :is_active,"sale" %>
              <%= f.label :is_active,"販売中" %>
              <%= f.radio_button :is_active,"stop" %>
              <%= f.label :is_active,"販売停止中"%>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit"変更を保存",class:"btn btn-success px-3" %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>