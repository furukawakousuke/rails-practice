<div class="container">
  <div class="row">
    <div class="col-12">
      <h5 class="d-inline-block bg-light my-5 px-3">商品一覧</h5>
      <%= form_with model: @item,url: admin_item_path(@item),method: :patch do |f| %>
      <table>
        <tbody>
          <tr>
            <td><%= f.label :image,"商品画像" %></td>
            <td><%= f.file_field :image,accept:"image/*" %></td>
          </tr>
          <tr>
            <td><%= f.label :name,"商品名" %></td>
            <td><%= f.text_field :name %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>